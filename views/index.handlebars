<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="https://webstockreview.net/images/cheeseburger-clipart-emoji-12.png" alt="burger" class="imgb" />
			<h1> EAT DA BURGER </h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 text-center" class="task">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 text-center">
					<section>
					{{this.id}}. {{this.burger_name}}
					</section>
				</div>
				<div class="col-md-3 text-center">
					<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
						<button type="submit" class="btn btn-secondary">Devour it</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-8 offset-4 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-secondary" id="text-enter-button">Order Up</button>
			</form>
		</div>
	</div>
</div>